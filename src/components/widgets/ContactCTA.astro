---
import { Icon } from 'astro-icon/components';

const benefits = [
  {
    icon: 'tabler:brain',
    title: 'AI Expertise',
    description: 'Text-to-SQL, ML models, predictive analytics'
  },
  {
    icon: 'tabler:rocket',
    title: 'Parallel Innovation',
    description: 'Cross-industry insights driving breakthrough solutions'
  },
  {
    icon: 'tabler:chart-line',
    title: 'Proven Results',
    description: '32% cost reduction, 1000+ families connected, 10+ systems modernized'
  },
  {
    icon: 'tabler:shield-check',
    title: '100% Success Rate',
    description: 'Every project delivered, zero system failures'
  }
];

const contactChannels = [
  {
    icon: 'tabler:mail',
    label: 'lincoln@ljblab.dev',
    href: 'mailto:lincoln@ljblab.dev'
  },
  {
    icon: 'tabler:brand-linkedin',
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/lincoln-bicalho/'
  },
  {
    icon: 'tabler:brand-github',
    label: 'GitHub',
    href: 'https://github.com/lincolnbicalho'
  }
];
---

<section id="contact" class="py-20 px-4 mx-auto max-w-7xl relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%239333ea\" fill-opacity=\"0.3\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <!-- Section Content -->
  <div class="relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 scroll-fade-in">
      <p class="text-sm font-semibold text-purple-600 dark:text-purple-400 uppercase tracking-wide mb-2">
        Let's Build Together
      </p>
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
        Start Your Parallel Innovation Journey
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        Whether you need AI expertise, platform architecture, or strategic guidance—let's explore how parallel innovation can transform your challenges into opportunities.
      </p>
    </div>

    <!-- Main CTA Card -->
    <div class="max-w-4xl mx-auto mb-12 scroll-slide-up">
      <div class="bg-gradient-to-br from-purple-600 to-blue-600 rounded-3xl p-8 md:p-12 text-center shadow-2xl">
        <Icon name="tabler:rocket" class="w-16 h-16 text-white mx-auto mb-6" />
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to Transform Your Business?
        </h3>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Schedule your free 30-minute strategy session. We'll explore your challenges, discuss solutions, and create a clear action plan—whether we work together or not.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-purple-600 rounded-full font-bold text-lg hover:bg-gray-100 transition-all transform hover:scale-105"
          >
            Schedule Your Strategy Session
            <Icon name="tabler:calendar" class="w-6 h-6 ml-2" />
          </a>
        </div>

        <!-- Response Time Promise -->
        <div class="flex items-center justify-center gap-2">
          <Icon name="tabler:clock" class="w-5 h-5 text-white/70" />
          <span class="text-white/70">Typically responds within 48 hours</span>
        </div>
      </div>
    </div>

    <!-- Benefits Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12 scroll-slide-up">
      {benefits.map((benefit, index) => (
        <div 
          class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="inline-flex p-3 rounded-xl bg-purple-100 dark:bg-purple-900/30 mb-4">
            <Icon name={benefit.icon} class="w-6 h-6 text-purple-600 dark:text-purple-400" />
          </div>
          <h4 class="font-bold text-gray-900 dark:text-white mb-2">
            {benefit.title}
          </h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Quick Contact Links -->
    <div class="text-center">
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        Prefer direct contact? Reach out through any channel:
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        {contactChannels.map((channel) => (
          <a
            href={channel.href}
            target={channel.icon === 'tabler:mail' ? undefined : '_blank'}
            rel={channel.icon === 'tabler:mail' ? undefined : 'noopener noreferrer'}
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-all"
          >
            <Icon name={channel.icon} class="w-5 h-5" />
            <span class="font-medium">{channel.label}</span>
          </a>
        ))}
      </div>
    </div>

    <!-- Trust Indicators -->
    <div class="mt-12 flex justify-center">
      <div class="grid grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">100%</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Success Rate</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-green-600 dark:text-green-400">10+</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Years Experience</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">3</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Active Ventures</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .scroll-slide-up > * {
    animation: fadeInUp 0.8s both;
  }
</style>