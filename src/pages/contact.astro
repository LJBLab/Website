---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Get In Touch" title="Let's Build Something Amazing" />

  <ContactUs
    id="form"
    title="Ready to start your project?"
    subtitle="Whether you need AI solutions, data science expertise, or modern application development, we're here to bring your ideas to life."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company (Optional)',
      },
      {
        type: 'select',
        name: 'project_type',
        label: 'Project Type',
        options: [
          { label: 'AI Development', value: 'ai' },
          { label: 'Data Science', value: 'data-science' },
          { label: 'Blazor Application', value: 'blazor' },
          { label: 'MAUI Development', value: 'maui' },
          { label: 'Consulting', value: 'consulting' },
          { label: 'Other', value: 'other' },
        ],
      },
    ]}
    textarea={{
      label: 'Project Details',
      placeholder: 'Tell us about your project ideas, requirements, and goals...',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="We typically respond within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    items={[
      {
        title: 'Email Us',
        description: `Ready to start your project? Drop us a line at lincoln@ljblab.dev`,
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: `Based in Riverdale Park, Maryland, serving clients globally`,
        icon: 'tabler:map-pin',
      },
      {
        title: 'Schedule a Consultation',
        description: `Let's discuss your project needs and goals. We'll help you find the right solution for your business.`,
        icon: 'tabler:calendar',
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, customization options, licensing for commercial use, inquiries about specific template, etc.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like template installation, problems editing difficulties, compatibility issues with software or download errors, or other technical challenges related to using the templates.',
      },
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
