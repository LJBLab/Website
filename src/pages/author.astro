---
import Layout from '~/layouts/PageLayout.astro';
import StructuredData from '~/components/common/StructuredData.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Lincoln J Bicalho - Author Profile',
  description: 'About Lincoln J Bicalho - Senior Software Engineer specializing in AI/ML integration, government digital transformation, and enterprise system modernization.',
  ignoreTitleTemplate: true,
};

const socialLinks = [
  { name: 'GitHub', icon: 'tabler:brand-github', url: 'https://github.com/lincolnbicalho' },
  { name: 'LinkedIn', icon: 'tabler:brand-linkedin', url: 'https://www.linkedin.com/in/lincolnbicalho' },
  { name: 'Twitter', icon: 'tabler:brand-x', url: 'https://twitter.com/ljblab' },
  { name: 'Email', icon: 'tabler:mail', url: 'mailto:lincoln@ljblab.dev' },
];
---

<Layout metadata={metadata}>
  <StructuredData type="Person" />

  <section class="py-8 sm:py-16 lg:py-20 mx-auto">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <!-- Author Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter font-heading mb-4">
          Lincoln J Bicalho
        </h1>
        <p class="text-xl text-muted dark:text-slate-400 mb-6">
          Senior Software Engineer & AI Integration Specialist
        </p>

        <!-- Social Links -->
        <div class="flex gap-4 justify-center mb-8">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              class="text-gray-500 hover:text-primary dark:hover:text-blue-400 transition"
              title={link.name}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={link.icon} class="w-6 h-6" />
            </a>
          ))}
        </div>
      </div>

      <!-- About Section -->
      <div class="prose prose-lg mx-auto dark:prose-invert mb-16">
        <h2>About Lincoln</h2>
        <p>
          With over 10 years of experience in software engineering, Lincoln J Bicalho specializes in
          building AI-powered enterprise solutions for government and commercial sectors. Currently
          serving as a Software Engineer at NuAxis Innovations, he manages 10+ federal government
          systems while leading the development of cutting-edge Text-to-SQL AI systems using
          multi-agent orchestration.
        </p>

        <h3>Technical Expertise</h3>
        <ul>
          <li><strong>AI/ML Frameworks:</strong> Semantic Kernel, LangChain, CrewAI, Vanna AI</li>
          <li><strong>Cloud & DevOps:</strong> Azure (Certified Developer Associate & DevOps Engineer Expert)</li>
          <li><strong>Development:</strong> .NET Core 8, Blazor, Angular, React, Python</li>
          <li><strong>Architecture:</strong> Clean Architecture, Microservices, Multi-Agent Systems</li>
          <li><strong>Security:</strong> PKI, Zero-Trust, OAuth/JWT, SAML, FedRAMP, FISMA compliance</li>
        </ul>

        <h3>Notable Achievements</h3>
        <ul>
          <li>Successfully implemented facial recognition system for government agency (2018-2019)</li>
          <li>Led modernization of multiple legacy VB.NET systems to modern architectures</li>
          <li>Passed FedRAMP and FISMA audits on first attempt</li>
          <li>Built production systems supporting 50,000+ daily active users</li>
          <li>Currently pursuing Master's in Software Engineering at University of Maryland</li>
        </ul>

        <h3>Writing Philosophy</h3>
        <p>
          Lincoln writes from the trenches of real-world enterprise development. Every article
          shares hard-won experience from production systems, focusing on practical solutions
          that actually work at scale. His content emphasizes the importance of verification,
          testing, and maintaining a balanced perspective on AI capabilities - recognizing that
          AI tools assist but don't replace human expertise.
        </p>
      </div>

      <!-- Latest Articles -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-center">Latest Articles by Lincoln</h2>
        <BlogLatestPosts count={6} />
      </div>

      <!-- Call to Action -->
      <div class="text-center bg-gray-50 dark:bg-slate-800 rounded-lg p-8">
        <h2 class="text-2xl font-bold mb-4">Work With Lincoln</h2>
        <p class="text-lg text-muted dark:text-slate-400 mb-6">
          Need help with AI integration, Blazor development, or government system modernization?
        </p>
        <div class="flex gap-4 justify-center">
          <a
            href="/contact"
            class="btn btn-primary"
          >
            Get in Touch
          </a>
          <a
            href="/profile"
            class="btn btn-outline"
          >
            View Full Profile
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>