---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'AI/ML Development & Enterprise Solutions | Lincoln J Bicalho',
  description: 'Expert AI/ML integration, Blazor enterprise development, and federal system modernization services. Multi-agent orchestration, Text-to-SQL systems, and government-compliant applications.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Enterprise AI & Government Solutions"
    title="Production-Ready AI/ML Integration for Federal and Enterprise Systems"
    subtitle="Specializing in multi-agent orchestration, Blazor enterprise architecture, and federal system modernization. Building scalable, compliant solutions that solve real-world problems at government scale."
    actions={[
      { variant: 'primary', text: 'Schedule Consultation', href: '/contact' },
      { text: 'View Case Studies', href: '/blog' }
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'AI and Enterprise Development',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Core Service Offerings"
    subtitle="Proven expertise in AI/ML systems, enterprise development, and government modernization"
    columns={3}
    items={[
      {
        title: 'AI/ML Development & Integration',
        description:
          'Production-ready AI systems using Semantic Kernel, LangChain, and CrewAI. Specializing in Text-to-SQL solutions with Vanna AI, multi-agent orchestration, and enterprise AI implementation with built-in verification and confidence scoring.',
        icon: 'tabler:brain',
      },
      {
        title: 'Blazor Enterprise Architecture',
        description:
          'Multi-tenant Blazor applications supporting large-scale deployments. Expertise in hybrid storage patterns, Zero-Trust authentication, and government-compliant architectures proven in production environments.',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Legacy System Modernization',
        description:
          'Federal system transformation from legacy platforms to modern .NET Core and Azure cloud architecture. Compliance-focused migrations with FedRAMP and FISMA certification support.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Database Intelligence Systems',
        description:
          'Text-to-SQL systems that convert natural language to accurate database queries. Enterprise-grade implementations with confidence scoring, query validation, and support for complex multi-table operations.',
        icon: 'tabler:database-search',
      },
      {
        title: 'Azure Cloud Architecture',
        description:
          'Enterprise cloud solutions leveraging Azure services with a focus on government compliance. Azure Developer Associate and DevOps Engineer Expert certified with hands-on production experience.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Government Compliance Consulting',
        description:
          'Navigate FedRAMP, FISMA, and federal security requirements. Practical guidance based on experience passing multiple government audits and maintaining compliant production systems.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Battle-Tested Architecture',
        description:
          'Solutions proven in production environments managing government systems. Every architecture pattern and implementation approach has been validated in real-world deployments.',
        icon: 'tabler:checkup-list',
      },
      {
        title: 'AI with Human Oversight',
        description:
          'AI systems designed with verification layers, confidence scoring, and human validation. We build AI tools that assist experts, not replace them.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Compliance-First Development',
        description:
          'Government and enterprise security requirements integrated from day one. Experience with FedRAMP, FISMA, and federal audit processes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Production Monitoring',
        description:
          'Comprehensive observability and monitoring strategies for AI/ML systems. Built-in logging, performance tracking, and error analysis for enterprise deployments.',
        icon: 'tabler:chart-line',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&auto=format&fit=crop&w=870&q=80',
      alt: 'Enterprise Development Process',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Development Approach</h3>
      <p class="text-muted">Building production-ready systems with enterprise reliability and government-grade security.</p>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Scalable Architecture',
        description:
          'Multi-tenant systems designed to scale. Our implementations support enterprise-level user loads while maintaining performance and security isolation.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Real-World Testing',
        description:
          'AI/ML systems validated against production scenarios, edge cases, and failure conditions. We measure accuracy, track confidence scores, and implement continuous improvement.',
        icon: 'tabler:test-pipe',
      },
      {
        title: 'Knowledge Transfer',
        description:
          'Comprehensive documentation and team training ensures your staff can maintain and extend the solutions we build. We create self-sufficient teams, not dependencies.',
        icon: 'tabler:school',
      },
      {
        title: 'Ongoing Support',
        description:
          'Post-deployment support for AI model retraining, performance optimization, and system enhancements. We partner with you for long-term success.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1553877522-43269d4ea984?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
      alt: 'Technical Consulting',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Value Delivery</h3>
      <p class="text-muted">From architecture to deployment, we ensure sustainable solutions that grow with your organization.</p>
    </Fragment>
  </Content>

  <!-- Technical Expertise Section -->

  <Content
    isReversed
    tagline="Technology Stack"
    title="Enterprise-Grade Tools & Frameworks"
    items={[
      {
        title: 'AI/ML Frameworks',
        description: 'Semantic Kernel, LangChain, CrewAI, Vanna AI, Claude Code, GitHub Copilot',
      },
      {
        title: 'Application Development',
        description: '.NET Core 8, ASP.NET MVC, Blazor Server/WASM/Hybrid, Angular, React',
      },
      {
        title: 'Database Systems',
        description: 'SQL Server, Oracle, PostgreSQL, MySQL, MongoDB - Text-to-SQL expertise',
      },
      {
        title: 'Cloud & DevOps',
        description: 'Azure (Developer Associate & DevOps Expert), CI/CD pipelines, Infrastructure as Code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&auto=format&fit=crop&w=870&q=80',
      alt: 'Technology Stack',
    }}
  />

  <!-- Case Study Callout -->

  <Content
    tagline="Proven Results"
    title="Real-World Implementation Examples"
    subtitle="See how we've helped organizations transform their systems"
    items={[
      {
        title: 'Multi-Tenant Blazor Architecture',
        description: 'Enterprise multi-tenant system with hybrid authentication, database-per-tenant isolation, and Zero-Trust security. Handles high-volume production workloads with strong reliability.',
      },
      {
        title: 'Text-to-SQL AI System',
        description: 'Natural language database querying with Vanna AI. Multi-agent orchestration for complex queries, built-in validation, and confidence scoring for enterprise data access.',
      },
      {
        title: 'Federal System Modernization',
        description: 'Legacy VB.NET to .NET Core migration for government systems. FedRAMP-compliant architecture with Azure cloud deployment and modern security patterns.',
      },
    ]}
    callToAction={{
      text: 'Read Full Case Studies',
      href: '/blog',
      icon: 'tabler:chevron-right',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Build Production-Ready AI/ML Solutions?"
    subtitle="Let's discuss how AI integration, Blazor enterprise architecture, or legacy modernization can transform your systems. Schedule a consultation to explore your specific requirements."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Consultation',
        href: '/contact',
      },
      {
        text: 'View Technical Blog',
        href: '/blog',
      },
    ]}
  />
</Layout>
