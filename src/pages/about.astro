---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'About LJBLab - Innovation Through Code',
  description: 'Learn about LJBLab\'s mission to push the boundaries of technology through AI, data science, and modern application development.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About LJBLab"
  >
    <Fragment slot="title">
      Transforming Ideas into <br />
      <span class="text-accent dark:text-white">Digital Excellence</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-2xl mb-4 block font-semibold">Welcome to LJBLab</span>
      Where cutting-edge technology meets practical solutions. We're not just developers – we're innovators, 
      problem-solvers, and digital architects building the future of technology.
    </Fragment>
  </Hero>

  <!-- Stats Section -->
  <Stats
    title="Our Impact in Numbers"
    subtitle="Measurable results that speak for themselves"
    stats={[
      { title: 'Projects Delivered', amount: '50+' },
      { title: 'Lines of Code', amount: '2M+' },
      { title: 'Client Satisfaction', amount: '98%' },
      { title: 'Years of Experience', amount: '5+' },
    ]}
  />

  <!-- Our Story -->
  <Features3
    title="Our Journey"
    subtitle="Building Tomorrow's Technology Today"
    columns={2}
    items={[
      {
        title: 'The Beginning',
        description: 'Founded with a vision to bridge the gap between theoretical computer science and practical business applications, LJBLab has evolved into a powerhouse of innovation.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Our Mission',
        description: 'To democratize advanced technology and make cutting-edge solutions accessible to businesses of all sizes. We believe AI and modern development should empower every organization.',
        icon: 'tabler:target',
      },
      {
        title: 'Our Approach',
        description: 'We combine deep technical knowledge with strategic business thinking to deliver solutions that don\'t just work – they transform organizations.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Our Vision',
        description: 'To be the catalyst for digital transformation, enabling businesses to harness the full potential of modern technology.',
        icon: 'tabler:eye',
      },
    ]}
  />

  <!-- Core Values -->
  <Features2
    title="Our Core Values"
    subtitle="The principles that guide everything we do"
    highlight="Values"
    items={[
      {
        title: 'Innovation First',
        description: 'We push boundaries and challenge conventions. Every project is an opportunity to innovate and create something extraordinary.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Quality Without Compromise',
        description: 'Excellence is non-negotiable. We deliver solutions that are robust, scalable, and built to last.',
        icon: 'tabler:award',
      },
      {
        title: 'Transparency & Trust',
        description: 'Open communication and honest partnerships. We believe in building relationships based on trust and mutual respect.',
        icon: 'tabler:users',
      },
      {
        title: 'Continuous Learning',
        description: 'Technology evolves, and so do we. We stay at the forefront through constant learning and adaptation.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Impact-Driven',
        description: 'We measure success by the real-world impact of our solutions. Every line of code should create tangible value.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Ethical Technology',
        description: 'Responsible AI and ethical data practices. We build technology that respects privacy and promotes fairness.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Our Process -->
  <Steps2
    title="How We Work"
    subtitle="Our proven methodology for delivering exceptional results"
    items={[
      {
        title: 'Discovery & Analysis',
        description: 'We dive deep into your business challenges, understanding not just what you need, but why you need it.',
        icon: 'tabler:search',
      },
      {
        title: 'Strategic Planning',
        description: 'We craft a detailed roadmap that aligns technology solutions with business objectives.',
        icon: 'tabler:map',
      },
      {
        title: 'Agile Development',
        description: 'Using modern methodologies, we build iteratively with continuous feedback and adaptation.',
        icon: 'tabler:code',
      },
      {
        title: 'Rigorous Testing',
        description: 'Quality assurance integrated throughout with automated testing and security audits.',
        icon: 'tabler:test-pipe',
      },
      {
        title: 'Seamless Deployment',
        description: 'We handle deployment complexities, ensuring smooth transitions with minimal disruption.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Continuous Support',
        description: 'Ongoing support and optimization to ensure your solution evolves with your needs.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  />

  <!-- Technology Stack -->
  <Features2
    title="Our Technology Arsenal"
    subtitle="Cutting-edge tools and frameworks we master"
    columns={3}
    items={[
      {
        title: 'AI & Machine Learning',
        description: 'TensorFlow, PyTorch, Scikit-learn, OpenAI, Hugging Face',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud Platforms',
        description: 'AWS, Azure, Google Cloud, Kubernetes, Docker',
        icon: 'tabler:cloud',
      },
      {
        title: 'Data Engineering',
        description: 'Apache Spark, Kafka, Airflow, Databricks, Snowflake',
        icon: 'tabler:database',
      },
      {
        title: 'Web Development',
        description: 'React, Vue, Blazor, Next.js, ASP.NET Core',
        icon: 'tabler:world',
      },
      {
        title: 'Mobile Development',
        description: '.NET MAUI, React Native, Flutter, Xamarin',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'DevOps & CI/CD',
        description: 'GitHub Actions, Jenkins, GitLab CI, ArgoCD',
        icon: 'tabler:git-merge',
      },
    ]}
  />

  <!-- Leadership Section -->
  <div class="py-16 px-6 mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">Meet the Founder</h2>
      <div class="mt-8 p-8 rounded-2xl bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 max-w-4xl mx-auto">
        <h3 class="text-2xl font-bold mb-2">Lincoln J Bicalho</h3>
        <p class="text-lg text-muted mb-6">Founder & Principal Software Engineer</p>
        
        <div class="text-left space-y-4 mb-6">
          <div class="border-l-4 border-blue-500 pl-4">
            <h4 class="font-semibold text-lg mb-2">Current Role</h4>
            <p class="text-base leading-relaxed">
              <strong>Senior Software Engineer (Federal Contractor)</strong> (February 2023 - Present)<br/>
              Leading development efforts for federal agencies, architecting and maintaining over 10 critical systems 
              that serve millions of visitors annually. Specializing in enterprise .NET applications using MVC architecture, 
              Angular, jQuery, and implementing clean architecture patterns for scalable, maintainable solutions. Currently pursuing 
              Master\'s degree in Software Engineering at the University of Maryland.
            </p>
          </div>
          
          <div class="border-l-4 border-purple-500 pl-4">
            <h4 class="font-semibold text-lg mb-2">Technical Expertise</h4>
            <p class="text-base leading-relaxed">
              Full-stack developer with deep expertise in modern software architecture, from enterprise .NET ecosystems to 
              cutting-edge AI implementations. Proficient in C#, JavaScript/TypeScript, advanced analytics technologies, and cloud-native solutions. 
              Passionate about clean code, design patterns, and building systems that scale.
            </p>
          </div>
          
          <div class="border-l-4 border-green-500 pl-4">
            <h4 class="font-semibold text-lg mb-2">Professional Journey</h4>
            <p class="text-base leading-relaxed">
              With extensive experience across government, enterprise, and startup environments, I've led development teams, 
              architected mission-critical systems, and delivered innovative solutions that transform how organizations operate. 
              From modernizing legacy government systems to implementing AI-driven analytics platforms, my focus is always on 
              delivering tangible business value through technology.
            </p>
          </div>
        </div>
        
        <p class="text-lg leading-relaxed italic border-t pt-6">
          "Technology should solve real problems and create meaningful impact. At LJBLab, we combine enterprise-grade 
          engineering practices with innovative thinking to deliver solutions that not only work today but scale for tomorrow."
        </p>
        
        <div class="flex flex-wrap justify-center gap-3 mt-6 pt-6 border-t">
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
            .NET/C#
          </span>
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
            Angular
          </span>
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
            Clean Architecture
          </span>
          <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full text-sm">
            AI/ML
          </span>
          <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full text-sm">
            Blazor
          </span>
          <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm">
            Azure
          </span>
          <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm">
            Microservices
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="py-16 px-6 mx-auto max-w-6xl">
    <div class="text-center p-12 rounded-3xl bg-gradient-to-r from-blue-600 to-purple-600">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Ready to Innovate?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Let's discuss how we can transform your business with cutting-edge technology solutions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn bg-white text-blue-600 hover:bg-gray-100 font-semibold px-8 py-4 rounded-full">
          Start Your Project
        </a>
        <a href="/blog" class="btn bg-transparent text-white border-2 border-white hover:bg-white hover:text-blue-600 font-semibold px-8 py-4 rounded-full">
          Explore Our Work
        </a>
      </div>
    </div>
  </div>
</Layout>