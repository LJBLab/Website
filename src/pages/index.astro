---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ContactCTA from '~/components/widgets/ContactCTA.astro';
import ProjectTicker from '~/components/widgets/ProjectTicker.astro';
import CurrentVentures from '~/components/widgets/CurrentVenturesV2.astro';
import ImpactDashboard from '~/components/widgets/ImpactDashboard.astro';
import CareerTimeline from '~/components/widgets/CareerTimeline.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CaseStudies from '~/components/widgets/CaseStudies.astro';

const metadata = {
  title: 'LJBLab - Parallel Innovation Architect',
  ignoreTitleTemplate: true,
  description: 'Building AI where it matters most. Currently leading 3 concurrent ventures across Healthcare, Government, and Social Impact sectors.',
};
---

<Layout metadata={metadata}>
  <!-- Project Ticker ******************* -->
  <ProjectTicker />
  
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Current Ventures',
        href: '#ventures',
        icon: 'tabler:rocket',
      },
      { text: 'Work With Me', href: '#contact' },
    ]}
  >
    <Fragment slot="title">
      Building AI Where <br />
      <span class="text-accent dark:text-white">It Matters Most</span>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="mb-4">
        <span class="font-bold text-lg">Parallel Innovation Architect</span> - 
        Currently leading <span class="text-gray-100 font-semibold">3 concurrent AI ventures</span> across 
        Healthcare, Government, and Social Impact sectors.
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm">
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-green-400/70 text-xs">●</span> PreventX AI
        </span>
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-amber-400/70 text-xs">●</span> Bliik Platform
        </span>
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-blue-400/70 text-xs">●</span> U.S. DOI Systems
        </span>
      </div>
    </Fragment>
  </Hero>

  <!-- Impact Dashboard ******************* -->
  
  <ImpactDashboard />
  
  <!-- Current Ventures Section ******************* -->
  
  <CurrentVentures />
  
  <!-- Career Timeline ******************* -->
  
  <CareerTimeline />
  
  <!-- Testimonials ******************* -->
  
  <Testimonials />
  
  <!-- Case Studies ******************* -->
  
  <CaseStudies />

  <!-- Portfolio/Features Widget *************** -->

  <Features
    id="portfolio"
    tagline="Our Expertise"
    title="Innovation Portfolio"
    subtitle="Cutting-edge experiments and developments across multiple domains"
    items={[
      {
        title: 'AI & Machine Learning',
        description:
          'Text-to-SQL systems with Semantic Kernel, LangChain, CrewAI orchestration. Facial recognition platforms with 99.7% accuracy. Multi-agent systems and intelligent automation.',
        icon: 'tabler:robot',
      },
      {
        title: 'Data Science & Analytics',
        description:
          'Advanced analytics with Python (Pandas, NumPy, Matplotlib). Business intelligence dashboards, predictive modeling, and ETL pipelines processing millions of records.',
        icon: 'tabler:chart-bar',
      },
      {
        title: '.NET Enterprise Development',
        description:
          'Full-stack applications with ASP.NET Core, Blazor Server/WASM, Entity Framework. Clean Architecture, MVC patterns, and comprehensive xUnit testing.',
        icon: 'tabler:bolt',
      },
      {
        title: 'MAUI Development',
        description:
          'Cross-platform mobile and desktop applications using .NET MAUI, delivering native performance across iOS, Android, Windows, and macOS.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Cloud & DevOps',
        description:
          'Microsoft Azure Developer Associate & DevOps Engineer Expert certified. Docker, Kubernetes, CI/CD pipelines, GitHub Actions, and Azure DevOps.',
        icon: 'tabler:cloud',
      },
      {
        title: 'API Development',
        description:
          'RESTful and GraphQL APIs built with modern frameworks, ensuring secure, efficient, and scalable backend services.',
        icon: 'tabler:api',
      },
    ]}
  />


  <!-- Features2 Widget ************** -->

  <Features2
    title="Technology Stack"
    subtitle="Leveraging the latest technologies to build robust solutions"
    tagline="Our Tools"
    items={[
      {
        title: 'Languages & Frameworks',
        description: 'C#, .NET Core/Framework, Python, JavaScript/TypeScript, Angular, React, Blazor',
        icon: 'tabler:code',
      },
      {
        title: 'AI/ML Platforms',
        description: 'Semantic Kernel, LangChain, CrewAI, Vanna AI, Claude Code, GitHub Copilot, TensorFlow',
        icon: 'tabler:brain',
      },
      {
        title: 'Data & Databases',
        description: 'SQL Server, Oracle, MySQL, PostgreSQL, MongoDB, Pandas, NumPy, Data Warehouse',
        icon: 'tabler:database',
      },
      {
        title: 'Cloud & DevOps',
        description: 'Azure, AWS, Docker, Kubernetes, CI/CD, GitHub Actions',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Web Technologies',
        description: 'Blazor, ASP.NET Core, SignalR, Entity Framework, REST/GraphQL',
        icon: 'tabler:world',
      },
      {
        title: 'Mobile Development',
        description: '.NET MAUI, Xamarin, Progressive Web Apps, Native APIs',
        icon: 'tabler:device-mobile-code',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Latest Blog Posts ************* -->

  <BlogLatestPosts
    title="Latest Insights"
    subtitle="Stay updated with our latest thoughts on technology, development practices, and innovation"
    tagline="Blog"
  />

  <!-- Contact CTA Section *********** -->
  
  <ContactCTA />
  
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#contact',
        icon: 'tabler:message-circle',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Build Something <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Amazing Together</span>
    </Fragment>

    <Fragment slot="subtitle">
      Ready to bring your ideas to life? Let's discuss your next innovative project.
    </Fragment>
  </CallToAction>
</Layout>