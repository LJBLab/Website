---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ContactCTA from '~/components/widgets/ContactCTA.astro';
import ProjectTicker from '~/components/widgets/ProjectTicker.astro';
import CurrentVentures from '~/components/widgets/CurrentVenturesV2.astro';
// import ImpactDashboard from '~/components/widgets/ImpactDashboard.astro';
import CareerTimeline from '~/components/widgets/CareerTimeline.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
// import CaseStudies from '~/components/widgets/CaseStudies.astro';

const metadata = {
  title: 'Lincoln J Bicalho - AI Integration Specialist | Blazor & Federal Systems Expert',
  ignoreTitleTemplate: true,
  description: 'Senior Software Engineer at NuAxis Innovations managing 10+ federal government systems. Expertise in Blazor, AI/ML multi-agent systems, and legacy modernization. Azure certified.',
};
---

<Layout metadata={metadata}>
  <!-- Project Ticker ******************* -->
  <ProjectTicker />
  
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Current Ventures',
        href: '#ventures',
        icon: 'tabler:rocket',
      },
      { text: 'Work With Me', href: '#contact' },
    ]}
  >
    <Fragment slot="title">
      <div class="text-sm font-semibold text-gray-400 mb-2">Lincoln J Bicalho</div>
      AI Integration Specialist <br />
      <span class="text-accent dark:text-white">for Federal Systems</span>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="mb-4">
        <span class="font-bold text-lg">Senior Software Engineer</span> at NuAxis Innovations -
        Managing <span class="text-gray-100 font-semibold">10+ federal government systems</span> with expertise in
        AI/ML integration, Blazor enterprise architecture, and legacy modernization.
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm">
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-blue-400/70 text-xs">●</span> 10+ Federal Systems
        </span>
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-green-400/70 text-xs">●</span> Azure Certified
        </span>
        <span class="flex items-center gap-1 px-3 py-1 bg-gray-800/50 rounded-full">
          <span class="text-amber-400/70 text-xs">●</span> AI/ML Specialist
        </span>
      </div>
    </Fragment>
  </Hero>

  <!-- Impact Dashboard ******************* -->

  <!-- <ImpactDashboard /> -->
  
  <!-- Current Ventures Section ******************* -->
  
  <CurrentVentures />
  
  <!-- Career Timeline ******************* -->
  
  <CareerTimeline />
  
  <!-- Testimonials ******************* -->

  <!-- <Testimonials /> -->
  
  <!-- Case Studies ******************* -->

  <!-- <CaseStudies /> -->

  <!-- Portfolio/Features Widget *************** -->

  <Features
    id="portfolio"
    tagline="Technical Expertise"
    title="Technical Capabilities"
    subtitle="Proven expertise in AI/ML integration, .NET development, and enterprise architecture"
    items={[
      {
        title: 'AI & Machine Learning',
        description:
          'Building Text-to-SQL systems using Semantic Kernel, LangChain, and CrewAI for multi-agent orchestration. Implemented facial recognition systems (2018-2019). Focus on practical AI integration that assists human expertise.',
        icon: 'tabler:robot',
      },
      {
        title: 'Data Science & Analytics',
        description:
          'Advanced analytics with Python (Pandas, NumPy, Matplotlib). Business intelligence dashboards, predictive modeling, and ETL pipelines processing millions of records.',
        icon: 'tabler:chart-bar',
      },
      {
        title: '.NET Enterprise Development',
        description:
          'Full-stack applications with ASP.NET Core, Blazor Server/WASM, Entity Framework. Clean Architecture, MVC patterns, and comprehensive xUnit testing.',
        icon: 'tabler:bolt',
      },
      {
        title: 'MAUI Development',
        description:
          'Cross-platform mobile and desktop applications using .NET MAUI, delivering native performance across iOS, Android, Windows, and macOS.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Cloud & DevOps',
        description:
          'Microsoft Azure Developer Associate & DevOps Engineer Expert certified. Docker, Kubernetes, CI/CD pipelines, GitHub Actions, and Azure DevOps.',
        icon: 'tabler:cloud',
      },
      {
        title: 'API Development',
        description:
          'RESTful and GraphQL APIs built with modern frameworks, ensuring secure, efficient, and scalable backend services.',
        icon: 'tabler:api',
      },
    ]}
  />


  <!-- Features2 Widget ************** -->

  <Features2
    title="Technology Stack"
    subtitle="Leveraging the latest technologies to build robust solutions"
    tagline="Technology Stack"
    items={[
      {
        title: 'Languages & Frameworks',
        description: 'C#, .NET Core/Framework, Python, JavaScript/TypeScript, Angular, React, Blazor',
        icon: 'tabler:code',
      },
      {
        title: 'AI/ML Platforms',
        description: 'Semantic Kernel, LangChain, CrewAI, Vanna AI, Claude Code, GitHub Copilot, TensorFlow',
        icon: 'tabler:brain',
      },
      {
        title: 'Data & Databases',
        description: 'SQL Server, Oracle, MySQL, PostgreSQL, MongoDB, Pandas, NumPy, Data Warehouse',
        icon: 'tabler:database',
      },
      {
        title: 'Cloud & DevOps',
        description: 'Azure, AWS, Docker, Kubernetes, CI/CD, GitHub Actions',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Web Technologies',
        description: 'Blazor, ASP.NET Core, SignalR, Entity Framework, REST/GraphQL',
        icon: 'tabler:world',
      },
      {
        title: 'Mobile Development',
        description: '.NET MAUI, Xamarin, Progressive Web Apps, Native APIs',
        icon: 'tabler:device-mobile-code',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Latest Blog Posts ************* -->

  <BlogLatestPosts
    title="Latest Insights"
    subtitle="Technical insights on AI/ML integration, Blazor development, and federal system modernization"
    tagline="Blog"
  />

  <!-- Contact CTA Section *********** -->
  
  <ContactCTA />
  
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#contact',
        icon: 'tabler:message-circle',
      },
    ]}
  >
    <Fragment slot="title">
      Building Federal Systems <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">with AI/ML Integration?</span>
    </Fragment>

    <Fragment slot="subtitle">
      I specialize in Blazor enterprise development, multi-agent AI systems, and legacy system modernization. Let's discuss how these approaches can work for your specific requirements.
    </Fragment>
  </CallToAction>
</Layout>